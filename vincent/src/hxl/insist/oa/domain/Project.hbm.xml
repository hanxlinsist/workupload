<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hxl.insist.oa.domain">

	<class name="Project" table="xlinsist_project">
		<id name="id">
            <generator class="native"/>
		</id>
		
		<property name="projectName" />
		
		<property name="ironAddress" />
		<!--  
			<set name="workTypes" cascade="all">
				The <key> element is the column in the WorkType table that holds 
				the foreign key to the parent object ie. table Project. 
				<key column="project_id" />
				<one-to-many class="WorkType"/>
			</set>
		-->
	</class>
	
</hibernate-mapping>